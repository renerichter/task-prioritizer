# Task Prioritizer Configuration Example
# ========================================
# Copy this file to .env and adjust values as needed.
# See .env for full documentation of each setting.

# Rating Scale
RATING_0=0.0
RATING_1=0.3
RATING_2=0.6
RATING_3=1.0

# Impact Weights
WEIGHT_IMPACT_OUTCOME=0.75
WEIGHT_IMPACT_GOALS=0.25

# Urgency Weights
WEIGHT_URGENCY_PRIORITY=0.5
WEIGHT_URGENCY_DEADLINE=0.5

# Execution Friction Weights
WEIGHT_EXECUTION_COMPLEX=0.4
WEIGHT_EXECUTION_TIME=0.3
WEIGHT_EXECUTION_RISK=0.2
WEIGHT_EXECUTION_FUN=0.1

# Time Normalization (minutes)
TIME_THRESHOLD_LOW=30
TIME_THRESHOLD_MED=90
TIME_THRESHOLD_HIGH=150

# Symbol Thresholds
THRESHOLD_IMPACT_3STAR=0.75
THRESHOLD_IMPACT_2STAR=0.50
THRESHOLD_IMPACT_1STAR=0.25
THRESHOLD_URGENCY_HIGH=0.5
THRESHOLD_EXECUTION_HIGH=0.5
THRESHOLD_SURPRISE=0.5
THRESHOLD_PLANNED=0.5

# Stop Rule
STOP_RULE_FACTOR=1.5
